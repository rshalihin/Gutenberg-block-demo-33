{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "block-dev/text-card",
	"version": "0.1.0",
	"title": "Text-card",
	"category": "text",
	"icon": "admin-page",
	"description": "Example block scaffolded with Create Block tool.",
	"example": {},
	"supports": {
		"html": false,
		"shadow": true,
		"color": {
			"backgroundColor": true,
			"textColor": true
		},
		"spacing": {
			"padding": true,
            "margin": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		}
	},
	"textdomain": "text-card",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"attributes": {
		"cardHeading":{
			"type": "string"
		},
		"cardBody": {
			"type": "string"
		},
		"cardFooter": {
			"type": "string"
		}
	}
}